{
  "root": true,
  "extends": ["stylelint-plugin-stylus/standard"],
  "plugins": ["stylelint-plugin-stylus"],
  "rules": {
    "string-quotes": "double",
    "stylus/semicolon": "always",
    "stylus/declaration-colon": "always"
  },
  "ignoreFiles": ["node_modules/**/*", "src/assets/**/*", "dist/**/*", "typings/**/*"]
}
