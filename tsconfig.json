{
  "compilerOptions": {

    "incremental": true,
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES2015",
      "ES2015",
      "ESNext",
      "ScriptHost",
      "WebWorker"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*":[
        "*",
        "./typings"
      ],
      "@/*": [
        "src/*"
      ],
      "@images/*": [
        "src/img/*"
      ],
      "@ts/*": [
        "src/ts/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src*",
    "typings/*.d.ts"
  ]
}
