{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": ["DOM", "ES2015", "ES2015", "ESNext", "ScriptHost", "WebWorker"],
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
       "typing"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@img/*": ["./src/img/*"],
      "@http/*": ["./src/http/*"],
      "@util/*": ["./src/util/*"],
      "@script/*": ["./src/script/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts","**/*.js"]
}
