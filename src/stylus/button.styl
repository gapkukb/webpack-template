  src: url("data:application/x-font-woff;charset=utf-8;base64,") format("woff");

.icon
  font-style: normal;
  font-family: "icon" !important;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

