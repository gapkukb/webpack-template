body
  font: $base-font-size / $line-height $font-family;

colorful-botton(key, value)
  +modifier(key)
    border-color: value;
    background-color: value;
    color: $color-white;

    &:focus
      box-shadow: 0 0 0 4px rgba(value ? value : currentColor, 0.4);

plain-botton(key, value)
  +modifier(key, plain)
    border-color: value;
    background: linear-gradient(to right, value 50%, transparent 50%);
    background-position: right bottom;
    background-size: 200% 100%;
    color: value;
    transition: all 0.5s ease;

    &:focus
      box-shadow: 0 0 0 4px rgba(value ? value : currentColor, 0.4);

    &:hover
      background-position: left bottom;
      color: $color-white;
      opacity: 1;

+namespace(button)
  padding: 0 1em;
  min-width: $button-height;
  height: $button-height;
  border: 1px solid $color-bg-6;
  border-radius: $radius;
  background-color: $color-bg-1;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.4s;
  user-select: none;

  &:hover
  &:active
    position: relative;
    z-index: 2;
    opacity: 0.85;

  +modifier(mini)
    padding: 0 0.6em;
    min-width: $button-mini-height;
    height: $button-mini-height;
    font-size: 12px;

  +modifier(small)
    min-width: $button-small-height;
    height: $button-small-height;
    font-size: 12px;

  +modifier(large)
    min-width: $button-large-height;
    height: $button-large-height;
    font-size: 16px;

  +group(true)
    modifier(large);
    modifier("icon");
    font-size: 28px;

  +group(true)
    modifier(small);
    modifier("icon");
    font-size: 18px;

  +modifier("icon")
    padding: 0;
    border-radius: 50%;
    font-size: 22px;

  +modifier("round")
    border-radius: 999px;

  +modifier("plain")
    background: none !important;

  $types = {
    primary: $color-blue,
    success: $color-green,
    danger: $color-pink,
    warning: $color-yellow,
    gold: $color-gold,
    info: $color-brown,
    dark: $color-black
  };

  +modifier(normal)
    background-image: url("data:image/png;base64,");
    background-size: contain;
    color: $color-brown;

  +modifier(borderless)
    border-color: transparent;

  for item, value in $types
    colorful-botton(item, value);
    plain-botton(item, value);

+namespace(button-group)
  display: inline-flex;
  overflow: hidden;
  border-radius: $radius;
  // -webkit-mask-image: -webkit-radial-gradient(white, black);
  transform: translateZ(0);

  >
    +namespace(button)
      border-radius: 0;

+namespace(dropdown)
  position: relative;
  display: inline-block;
  overflow: visible;
  text-align: center;
  padding-bottom $size-xxs;

  +element(title)
    border-color: transparent;
    background-color: $color-bg-3;

  +element(body)
    position: absolute;
    z-index: 2;
    display: none;
    overflow: auto;
    padding-top: $size-xs;
    max-height: 200px;
    border-radius: $radius;
    background-color: $color-bg-3;
    white-space: nowrap;
    overscroll-behavior: contain;

    ^[0]:hover>&
      display: block;

    +modifier(tf)
      bottom: 100%;
      left: 0;

    +modifier(tr)
      right: 0;
      bottom: 100%;

    +modifier(bl)
      top: 100%;
      left: 0;

    +modifier(br)
      top: 100%;
      right: 0;

  +element("item")
    position: relative;
    padding: $size-xs;
    cursor: pointer;
    transition: all 0.3s;

    // &:first-child
      // border-top: $size-xs solid $color-bg-3;

    &:hover
    &.active
      background-color: $color-bg-7;
      color $color-gold

@font-face
