.row
    display flex
.square,.test
    background-color red
    position relative
    font-size 0
    overflow hidden
    flex 1
    margin 10px
    display:inline-block
    width 25%
    &:before
        content: ""
        display block
        padding-bottom 100%
    >img
        position absolute
        height 100%
        width 100%
        left 0
        top 0
    &.fill>img
        object-fit: fill
    &.contain>img
        object-fit: contain
    &.cover>img
        object-fit: cover

.square
    img
        left 50%
        top 50%
        transform translate(-50%,-50%)
    &.fill>img
        width 100%
        height 100%
    &.contain>img
        max-height 100%
        max-width 100%
    &.cover>img
        min-height 100%
        min-width 100%


