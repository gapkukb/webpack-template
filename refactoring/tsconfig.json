{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["DOM", "ES2015", "ES2015","ES2016","ES2017","ES2018","ES2019","ES2020", "ESNext", "ScriptHost", "WebWorker"],
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "downlevelIteration": true,
    "importsNotUsedAsValues": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [
      /* 如果tsconfig.json中通过includes指定了文件，typeRoots会失效，需要在includes中指定typing */
      "node_modules/@types",
       "types"
    ],
    "paths": {
      "@": ["./src"],
      "@img": ["./src/img"],
      "@http": ["./src/http"],
      "@util": ["./src/util"],
      "@stylus": ["./src/stylus"],
      "@script": ["./src/script"],
      "@types": ["./src/types"],
      "@i18n": ["./src/i18n"],
      "@include": ["./src/template/include"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts","**/*.js"]
}
